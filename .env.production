# Production Environment Variables for Free Storage Backend

# Server Configuration
PORT=3001
NODE_ENV=production

# CORS Configuration (Add your production frontend URL)
ALLOWED_ORIGINS=https://chat-website-app.web.app,https://chat-website-app.firebaseapp.com,http://localhost:3000

# Database Configuration (SQLite in production)
DATABASE_PATH=./data/filestore.db

# File Upload Limits
MAX_FILE_SIZE=52428800
MAX_FILES_PER_USER=100

# Security Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
UPLOAD_RATE_LIMIT_MAX=20

# Logging
LOG_LEVEL=info