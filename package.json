{
  "name": "chat-app-file-storage",
  "version": "1.0.0",
  "description": "Free file storage backend for profile pics and file sharing",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "echo 'Build completed - ready for deployment'",
    "postinstall": "node -e \"const fs=require('fs'); ['data','uploads/profiles','uploads/shared','uploads/temp'].forEach(dir=>fs.mkdirSync(dir,{recursive:true}))\""
  },
  "dependencies": {
    "express": "^4.18.2",
    "multer": "^1.4.5-lts.1",
    "sqlite3": "^5.1.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "uuid": "^9.0.1",
    "fs-extra": "^11.2.0"
  },
  "optionalDependencies": {
    "sharp": "^0.32.6"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  },
  "keywords": ["file-storage", "profile-pictures", "free", "sqlite"],
  "author": "Chat App",
  "license": "MIT"
}